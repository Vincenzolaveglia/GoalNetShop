@model List<GoalNetShop.Models.Product>

@{
    ViewBag.Title = "AllProducts";
}

@if (Model == null || Model.Count == 0)
{
    <h2>Non ci sono prodotti disponibili in questa categoria</h2>
}
else
{
    <h2 class="text-white">Tutti i nostri prodotti:</h2>
    <div class="row justify-content-center mt-5">
        @foreach (var product in Model)
        {
            <div class="col-md-3 mb-4 mx-auto">
                <a href="@Url.Action("Details", "Product", new { productId = product.ProductId })" class="text-decoration-none">
                    <div class="card bg-transparent text-white border-0">
                        <img src="~/Content/imgs/@product.Image" class="card-img-top rounded-5" alt="@product.Name">
                        <div class="card-body">
                            <h5 class="card-title">@product.Name</h5>
                            <p class="card-text">€ @product.Price</p>
                        </div>
                    </div>
                </a>
            </div>
        }
    </div>
}

<style>
    .card {
        transition: transform 0.3s ease-in-out;
    }

        .card:hover {
            transform: scale(1.05);
        }
</style>

