@model GoalNetShop.Models.User

@{
    ViewBag.Title = "Register";
}
<div class="container">
    <h2 class="text-center mb-4">Registrati</h2>

    <div class="d-flex justify-content-center text-center">
        @using (Html.BeginForm("Register", "Auth", FormMethod.Post, new { @class = "form" }))
        {
            @Html.AntiForgeryToken()
            <div class="mb-3">
                @Html.EditorFor(u => u.Name, new { htmlAttributes = new { @class = "form-control bg-transparent text-white", placeholder = "Nome"} })
                @Html.ValidationMessageFor(u => u.Name, "", new { @class = "text-danger" })
            </div>

            <div class="mb-3">
                @Html.EditorFor(u => u.Email, new { htmlAttributes = new { @class = "form-control bg-transparent text-white", placeholder = "Email" } })
                @Html.ValidationMessageFor(u => u.Email, "", new { @class = "text-danger" })
            </div>

            <div class="mb-3">
                @Html.PasswordFor(u => u.Password, new { @class = "form-control bg-transparent text-white", placeholder = "Password" })
                @Html.ValidationMessageFor(u => u.Password, "", new { @class = "text-danger" })
            </div>

            <button type="submit" class="btn btn-light px-4">Registrati</button>
        }
        </div>
    </div>
