@model GoalNetShop.Models.Product

@{
    ViewBag.Title = "AddArticle";
}

<div class="d-flex align-items-center justify-content-center flex-column h-100">
    <h2 class="mb-3">Articolo</h2>

    <div>
        @using (Html.BeginForm("AddArticle", "Admin", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            @Html.AntiForgeryToken();

            <div class="mb-3">
                @Html.EditorFor(m => m.Name, new { htmlAttributes = new { @class = "form-control bg-transparent text-white", placeholder = "Nome prodotto" } })
                @Html.ValidationMessageFor(m => m.Name)
            </div>

            <div class="mb-3">
                @Html.EditorFor(m => m.Price, new { htmlAttributes = new { @class = "form-control bg-transparent text-white", placeholder = "Prezzo prodotto" } })
                @Html.ValidationMessageFor(m => m.Price, "", new { @class = "text-danger" })
            </div>

            <div class="mb-3">
                @Html.EditorFor(m => m.Description, new { htmlAttributes = new { @class = "form-control bg-transparent text-white", placeholder = "Descrizione prodotto" } })
                @Html.ValidationMessageFor(m => m.Description, "", new { @class = "text-danger" })
            </div>

            <div class="mb-3">
                <select id="IdCategory" name="CategoryId" class="form-select bg-transparent text-white">
                    <option value="" class="text-white bg-black">Seleziona categoria</option>
                    <option value="1" class="text-white bg-black">Maglie</option>
                    <option value="2" class="text-white bg-black">Tute</option>
                    <option value="3" class="text-white bg-black">Scarpe</option>
                </select>
                @Html.ValidationMessageFor(m => m.IdCategory, "", new { @class = "text-danger" })
            </div>


            <div class="form-group mb-3">
                @Html.EditorFor(m => m.Image, new { htmlAttributes = new { @class = "form-control", type = "file" } })
                @Html.ValidationMessageFor(m => m.Image, "", new { @class = "text-danger" })
            </div>


            <div class="text-center">
                <button type="submit" class="btn btn-light px-4">Aggiungi Prodotto</button>
            </div>
        }
    </div>
</div>
