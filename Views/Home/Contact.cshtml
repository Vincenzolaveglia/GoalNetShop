@{
    ViewBag.Title = "Contatti";
}

<h2 class="text-center text-white mb-5">Contatti</h2>

<div class="container">
    <div class="row">
        <div class="col-md-6">
            <h3 class="text-white mb-3">Dove siamo</h3>
            <!-- Inserisci qui la mappa del luogo utilizzando un iframe di Google Maps -->
            <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3066.5475681422564!2d-75.1638641847812!3d39.95258397942172!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x89c6c5ee266feb27%3A0xf8e5c54843a24a79!2sLiberty%20Bell%20Center!5e0!3m2!1sen!2sus!4v1638490204631!5m2!1sen!2sus" width="100%" height="300" style="border:0;" allowfullscreen="" loading="lazy"></iframe>
        </div>
        <div class="col-md-6">
            <h3 class="text-white mb-3">Informazioni di contatto</h3>
            <p class="text-white"><strong>Indirizzo:</strong> Via Roma, 12345, Città, Stato, CAP</p>
            <p class="text-white"><strong>Telefono:</strong> +39 0123 456789</p>
            <p class="text-white"><strong>Email:</strong> info@example.com</p>
            <h3 class="text-white mt-5 mb-3">Invia un messaggio</h3>
            <form>
                <div class="mb-3">
                    <input type="text" class="form-control bg-transparent text-white" placeholder="Nome" id="nameInput">
                </div>
                <div class="mb-3">
                    <input type="email" class="form-control bg-transparent text-white" placeholder="Email" id="inputEmail">
                </div>
                <div class="mb-3">
                    <textarea class="form-control bg-transparent text-white" rows="5" placeholder="Messaggio" id="messageInput"></textarea>
                </div>
                <button type="button" onclick="submitContact()" class="btn btn-outline-light">Iscriviti</button>
                <div id="submitSuccessMessage" style="display: none; color: green;" class="mt-2">Invio effettuato con successo!</div>
            </form>
        </div>
    </div>
</div>

<script>
    function submitContact() {
        var name = document.getElementById("nameInput").value;
        var email = document.getElementById("inputEmail").value;
        var message = document.getElementById("messageInput").value;
        document.getElementById("submitSuccessMessage").style.display = "block";
        document.getElementById("nameInput").value = "";
        document.getElementById("inputEmail").value = "";
        document.getElementById("messageInput").value = "";


        setTimeout(function () {
            document.getElementById("submitSuccessMessage").style.display = "none";
        }, 2000);
    }

</script>